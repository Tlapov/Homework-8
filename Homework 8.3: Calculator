number_1 = int(input("Enter your first number: "))
number_2 = int(input("Enter your second number: "))
operation = input("Enter your arithmetic operations (+,-,*,/): ")

if operation == "+":
    print(number_1 + number_2)
elif operation == "-":
    print(number_1 - number_2)
elif operation == "*":
    print(number_1 * number_2)
elif operation == "/":
    print(number_1 / number_2)
else:
    print("I don`t recognize arithmetic operation")
